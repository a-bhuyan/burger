<h1> Burgers you eat! </h1>
<h2> Burgers that are not devoured!</h2>
<ul>
{{#each burgers}}
  {{#unless this.devoured}}
    <li>
      {{this.name}}
      <form action= "/{{this.id}}?_method=PUT" method = "POST">
        <input type="hidden" name="devour" value="true">
        <button type="submit">Devour!</button>
      </form>

      {{> burgers/delete-burger}}
    </li>
    {{/unless}}
    {{/each}}
</ul>

<h2> Burgers that are DEVOURED!</h2>
<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.name}}
        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devour" value="false">
          <button type="submit">THROW UP!</button>
        </form>
        {{> burgers/delete-burger}}
      </li>
    {{/if}}
  {{/each}}
</ul>


<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="slee">Devoured?</label><br>
    <input type="radio" name="devour" value="1" checked> Devoured!<br>
    <input type="radio" name="devour" value="0"> Not Devoured
  </div>

  <button type="submit">Add Devour</button>
</form>
